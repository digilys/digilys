%li.dropdown
  %a#instance-selector-toggler.dropdown-toggle{data: { toggle: "dropdown" }, href: instances_path() }
    %small= current_instance.try(:name) || t(:"instances.choose")
    %span.caret
  %ul.dropdown-menu
    %li.load-indicator.disabled
      %a(href="#")= t(:wait)
    - if can?(:manage, Instance) || current_user.is_instance_admin?
      %li.divider
      %li
        = link_to t(:"instances.handle"), instances_path()
